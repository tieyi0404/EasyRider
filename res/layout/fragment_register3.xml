<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_resigter2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <EditText
        android:id="@+id/register3_passwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:fontFamily="roboto_light"
        android:hint="6-32位字母数字字符组合" 
        android:inputType="textPassword"
        android:textSize="14dp">
        <requestFocus />
        </EditText>

    <Button
        android:id="@+id/register3_registerbtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/register3_passwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:background="@drawable/textview_border"
        android:fontFamily="roboto_light"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:text="完成"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/register3_confirmpasswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register3_passwd"
        android:layout_below="@+id/register3_passwd"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:ems="10"
        android:fontFamily="roboto_light"
        android:hint="6-32位字母数字字符组合"
        android:textSize="14dp" >

        
    </EditText>
         <TextView
           android:id="@+id/registerfragments3_getcode"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:layout_marginLeft="18dp"
           android:layout_marginTop="15dp"
           android:text="获取验证码"
           android:textColor="@color/light_grey"
           android:textSize="14dp"
           android:textAppearance="?android:attr/textAppearanceMedium" />

       <TextView
           android:id="@+id/textView2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/textView1"
           android:layout_alignBottom="@+id/textView1"
           android:layout_alignParentRight="true"
           android:layout_marginRight="19dp"
           android:text="设置密码"
           android:textAppearance="?android:attr/textAppearanceMedium"
           android:textColor="@color/title_color"
           android:textSize="14dp" />

       <TextView
           android:id="@+id/textView1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/registerfragments3_getcode"
           android:layout_centerHorizontal="true"
           android:text="输入验证码"
           android:textAppearance="?android:attr/textAppearanceMedium"
           android:textColor="@color/light_grey"
           android:textSize="14dp" />

       <CheckBox
           android:id="@+id/checkBox1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/register3_registerbtn"
           android:layout_below="@+id/register3_registerbtn"
           android:layout_marginTop="18dp"
           android:textColor="@color/title_color"/>
       
       <TextView
           android:id="@+id/read_policy"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/checkBox1"
           android:layout_alignBottom="@+id/checkBox1"
           android:layout_toRightOf="@+id/checkBox1"
           android:layout_marginLeft="1dp"
           android:text="我已阅读并同意顺风车免责声明"
           android:textAppearance="?android:attr/textAppearanceMedium"
           android:textColor="@color/title_color"
           android:textSize="14dp" />

</RelativeLayout>