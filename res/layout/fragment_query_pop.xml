<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/QueryFragment" >
    
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_margin="5dip"
    android:background="@drawable/shape"
    android:padding="5dip"
    android:id="@+id/query_title">
    
   <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:id="@+id/query_ft" >
    
    
         <EditText
    	    android:id="@+id/query_from"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
        	android:layout_marginBottom="8dp"
            android:background="@drawable/edit_shape"
            android:hint="请输入起点"
            android:padding="10px"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/query_to"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
        	android:layout_marginBottom="8dp"
            android:background="@drawable/edit_shape"
            android:layout_below="@+id/query_from"
            android:hint="请输入终点"
            android:padding="10px"
            android:textSize="16dp" />
        
         <EditText
            android:id="@+id/query_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
        	android:layout_marginBottom="8dp"
            android:background="@drawable/edit_shape"
            android:layout_below="@+id/query_to"
            android:hint="请输入出发时间"
            android:padding="10px"
            android:textSize="16dp" />
        
        <Button
        android:id="@+id/query_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/query_date"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="查    询"
        android:textColor="@android:color/white"
        android:background="@drawable/textview_border"
        android:textSize="15sp" />
        
    </RelativeLayout>
    </RelativeLayout> 
</RelativeLayout>
