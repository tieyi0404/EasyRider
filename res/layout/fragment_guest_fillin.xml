<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/bg_color" 
     android:id="@+id/guest_fillinfragment" >

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"             
    android:layout_centerHorizontal="true"
    android:layout_margin="5dip"
    android:background="@drawable/shape"
    android:padding="5dip">
    
   <TextView
       android:id="@+id/fill_textView5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/fill_imageView2"
       android:layout_alignLeft="@+id/fill_textView1"
       android:text="我的信息"
       android:layout_marginBottom="14dp"
       android:textAppearance="?android:attr/textAppearanceSmall"
       android:textColor="@color/light_grey"
       android:textSize="20dp" />
        
    <ImageView
        android:id="@+id/fill_imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:src="@drawable/divide_line_xu" />
        
    <TextView
        android:id="@+id/fill_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/fill_imageView2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="14dp"
        android:text="@string/username"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16dp" />
    
    <EditText
        android:id="@+id/guest_fillin_username"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fill_textView1"
        android:layout_alignBottom="@+id/fill_textView1"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/fill_textView1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:singleLine="true"
        android:hint="6个字符以内"
        android:textSize="16dp" />
    
    <ImageView
        android:id="@+id/fill_imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/guest_fillin_username"
        android:layout_marginTop="16dp"
        android:src="@drawable/divide_line_xu" />


    <TextView
        android:id="@+id/fill_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fill_imageView3"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="14dp"
        android:text="性别"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16dp" />

    <Spinner
        android:id="@+id/guest_fillin_sex"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fill_textView2"
        android:layout_alignBottom="@+id/fill_textView2"
        android:layout_alignLeft="@+id/guest_fillin_username"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16dp" />

   <ImageView
        android:id="@+id/fill_imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/guest_fillin_sex"
        android:layout_marginTop="16dp"
        android:src="@drawable/divide_line_xu" />
 
        
   <Button
       android:id="@+id/guest_fillin_changebtn"
       android:layout_width="200dp"
       android:layout_height="50dp"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/fill_imageView4"
       android:layout_marginTop="40dp"
       android:background="@drawable/corner_button"
       android:paddingBottom="0dp"
       android:paddingTop="0dp"
       android:text="修改" 
       android:textColor="@color/title_color"/>
    
   </RelativeLayout>
</RelativeLayout>
