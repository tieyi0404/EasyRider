<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:orientation="vertical" >
	
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
	<TextView
	android:id="@+id/sourceAddr"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:textSize="15dp"
    android:padding="10px"
    android:textStyle="bold"/>
	
	<TextView
	android:id="@+id/arrow"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:layout_toRightOf="@+id/sourceAddr"
    android:textSize="15dp"
    android:text=" ---> "
    android:padding="10px"
    android:textStyle="bold"/>
		
	<TextView
	android:id="@+id/destAddr"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:layout_toRightOf="@+id/arrow"
    android:textSize="15dp"
    android:padding="10px"
    android:textStyle="bold"/>
	
	<TextView
	android:id="@+id/guestfull"
	android:layout_width="75dp"
	android:layout_height="25dp"
	android:text="客    满"
    android:textColor="@android:color/white"
	android:background="@drawable/textview_border"
	android:layout_alignParentRight="true"
	android:gravity="center"
	android:layout_marginRight="60px"
	android:textSize="12dp"
	android:textStyle="bold" />
	
	</RelativeLayout>
	
	 <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10px">
    
    <TextView
	android:id="@+id/bypassAddr_c"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:text="途径地："
    android:textSize="12dp"/>
        
    <TextView
	android:id="@+id/bypassAddr"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:layout_alignBaseline="@+id/bypassAddr_c"
    android:layout_alignBottom="@+id/bypassAddr_c"
   	android:layout_toRightOf="@+id/bypassAddr_c"
    android:textSize="12dp"/>
        
    </RelativeLayout>
	
	<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10px" >
	<TextView
	android:id="@+id/gotime_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:text="出发时间："
    android:textSize="12dp"/>
    
	<TextView
	android:id="@+id/gotime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:layout_alignBaseline="@+id/gotime_title"
    android:layout_alignBottom="@+id/gotime_title"
   	android:layout_toRightOf="@+id/gotime_title"
    android:textSize="12dp"/>
    </RelativeLayout>

    
	<ImageView
    android:id="@+id/imageView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cutline"
    />
	
</LinearLayout>

