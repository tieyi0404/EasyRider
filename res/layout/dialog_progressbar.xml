<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:padding="10dip"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <TextView   
  android:gravity="left"
  android:textColor="@color/black"
  android:text="正在下载..."
  android:id="@+id/dialog_progressbar_message"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"></TextView>
  
  <ProgressBar 
  android:id="@+id/dialog_progressbar_progress"
  android:indeterminateOnly="false"
  android:progressDrawable="@drawable/broswer_progress"
  android:layout_marginTop="5dip"
  android:layout_width="fill_parent"
  android:layout_height="5dip"></ProgressBar>
  
  <TextView   
  android:layout_gravity="center"
  android:gravity="center"
  android:text=""
  android:textColor="@color/black"
  android:id="@+id/dialog_progressbar_rate"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"></TextView>
</LinearLayout>
