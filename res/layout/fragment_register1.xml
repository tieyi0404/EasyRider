<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/registerfragments_header" />

   <RelativeLayout
       android:id="@+id/resigterfragment1"
       android:layout_width="match_parent"
       android:layout_height="match_parent" >

       <EditText
           android:id="@+id/register1_phone"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="100dp"
           android:inputType="phone"
           android:ems="10"
           android:fontFamily="roboto_light"
           android:hint="手机号" />

       <Button
           android:id="@+id/register1_registerbtn"
           android:layout_width="200dp"
           android:layout_height="50dp"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           android:background="@drawable/textview_border"
           android:fontFamily="roboto_light"
           android:paddingBottom="0dp"
           android:paddingTop="0dp"
           android:text="获取验证码"
           android:textColor="@color/white" />

       <TextView
           android:id="@+id/registerfragments_getcode"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:layout_marginLeft="18dp"
           android:layout_marginTop="15dp"
           android:text="获取验证码"
           android:textColor="@color/title_color"
           android:textSize="14dp"
           android:textAppearance="?android:attr/textAppearanceMedium" />

       <TextView
           android:id="@+id/textView2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/textView1"
           android:layout_alignBottom="@+id/textView1"
           android:layout_alignParentRight="true"
           android:layout_marginRight="19dp"
           android:text="设置密码"
           android:textAppearance="?android:attr/textAppearanceMedium"
           android:textColor="@color/light_grey"
           android:textSize="14dp" />

       <TextView
           android:id="@+id/textView1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/registerfragments_getcode"
           android:layout_centerHorizontal="true"
           android:text="输入验证码"
           android:textAppearance="?android:attr/textAppearanceMedium"
           android:textColor="@color/light_grey"
           android:textSize="14dp" />

   </RelativeLayout>

</LinearLayout>