<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/info_bg"
    android:id="@+id/QueryFragment" >
    
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:background="@drawable/shape"
    android:padding="5dip"
    android:id="@+id/query_title">
    
   <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:id="@+id/query_ft" >
    
	<TextView
        android:id="@+id/query_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#63a219"
        android:text="请选择查询条件"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_menu_trangle_down"
        android:textSize="16dp" />
	
    </RelativeLayout>
    </RelativeLayout>
    
   <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:background="@drawable/shape"
    android:padding="5dip"
    android:layout_below="@+id/query_title"
    android:id="@+id/query_content" > 
    
       
 <com.easy.freerider.view.XListView
            android:id="@+id/g_q_xlist_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/xlistview_background"
            android:cacheColorHint="#00000000" >
   </com.easy.freerider.view.XListView>
   </RelativeLayout>
   
</RelativeLayout>
